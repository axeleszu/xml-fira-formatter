{
	"compilerOptions": {
		"module": "Node16",
		"moduleResolution": "Node16",
		"target": "es2020",
		"outDir": "out",
		"lib": [
			"es2020",
			"dom"
		],
		"sourceMap": true,
		"strict": true,
		"rootDir": "src",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}